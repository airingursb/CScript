{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
    "baseUrl": "./src/index.ts",
    "typeRoots": [
      "../../typings/index.d.ts",
      "node_modules/@types"
    ],
    "target": "es2015",
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitHelpers": false,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": [
      "esnext",
      "DOM"
    ],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,                           /* Skip type checking of declaration files. */
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "../../typings"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
