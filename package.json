  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:fix",
      "prettier --write ./packages/**/*.ts ./packages/**/*.tsx",
      "npm run ts-lint",
      "git add"
    ],
    "packages/**/dist/**/*.js": []
